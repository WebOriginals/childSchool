mixin title(title)
    section.title-page
        .sec-title-page__container
            h1.title-page= title

mixin crumbs(title)
    section.crumbs-page
        .crumbs-page__container
            ul.crumbs-page__list
                li
                    a(href="/") Главная /
                li= title

